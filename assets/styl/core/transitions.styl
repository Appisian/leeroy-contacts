// ***********
//       PAGE TRANSITIONS
// ***********

.page-enter-active, .page-leave-active {
  transition: opacity 250ms;
  
}
.page-enter, .page-leave-to /* .fade-leave-active below version 2.1.8 */ {
  opacity: 0;
}

// ***********
//       COMPONENT TRANSITIONS
// ***********

.fade-enter-active, .fade-leave-active {
  transition: opacity .5s;
}
.fade-enter, .fade-leave-to /* .fade-leave-active below version 2.1.8 */ {
  opacity: 0;
}

.slide-up-enter-active, .slide-up-leave-active {
  transition: transform 400ms ease-out, opacity 200ms linear;
}

.slide-up-enter {
  opacity: 0;
  transform: translateY(10px);
}

.slide-up-leave-to /* .fade-leave-active below version 2.1.8 */ {
  opacity: 0;
  transform: translateY(-10px);
}

.slide-right-enter-active, .slide-right-leave-active {
  transition: transform 400ms ease-out, opacity 200ms linear;
}

.slide-right-enter {
  opacity: 0;
  transform: translateX(-10px);
}

.slide-right-leave-to /* .fade-leave-active below version 2.1.8 */ {
  opacity: 0;
  transform: translateX(10px);
}

.slide-left-enter-active, .slide-left-leave-active {
  transition: transform 300ms ease-out, opacity 200ms linear;
}

.slide-left-enter {
  opacity: 0;
  transform: translateX(100px);
}

.slide-left-leave-to /* .fade-leave-active below version 2.1.8 */ {
  opacity: 0;
  transform: translateX(100px);
}

.list-enter-active, .list-leave-active {
  transition: all 550ms linear;
}
.list-enter, .list-leave-to /* .list-leave-active below version 2.1.8 */ {
  opacity: 0;
  transform: translateY(30px);
}

.scale-fade-enter-active, .scale-fade-leave-active {
  transition: all 500ms;
}
.scale-fade-enter, .scale-fade-leave-to /* .list-leave-active below version 2.1.8 */ {
  transform: scale(1.1);
  opacity: 0;
}